#ifndef UTILS_H_
#define UTILS_H_

#define TRUE (!0)
#define FALSE (0)
#define LEDS_ON(PIN)	PORTB |= (1 << PIN)		// lights on
#define LEDS_OFF(PIN) 	PORTB &= ~((1 << PIN)	// lights off

#typedef uint16 unsigned int
#endif /* UTILS_H_ */
